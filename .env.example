# Environment configuration for TuXun Agent
# DO NOT commit this file to version control
# Copy this to .env and fill in your actual values

# Silicon Flow API Configuration
SILICON_FLOW_API_KEY=your_silicon_flow_api_key_here
SILICON_FLOW_BASE_URL=https://api.siliconflow.com/v1

# Alternative API Keys (if needed)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
DEFAULT_MODEL=qwen2.5-72b-instruct
MODEL_TEMPERATURE=0.3

# Database settings
DATABASE_URL=sqlite:///geolocation.db
VECTOR_DB_PATH=./data/vector_db

# Processing settings
MAX_IMAGE_SIZE=5000000  # 5MB
ALLOWED_IMAGE_FORMATS=JPEG,PNG,JPG,TIFF

# Agent settings
MAX_RETRIES=3
TIMEOUT=30
CONFIDENCE_THRESHOLD=0.7

# Paths
UPLOAD_FOLDER=./uploads
DATA_FOLDER=./data

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
